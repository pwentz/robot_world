<h3 class="text-center">Welcome to Robot World!</h3>
<div class="row">
  <ul class="media-list">
    <% @robots.each do |robot| %>
      <li class="media">
        <div class="col-md-2">
          <a href="#" class="thumbnail">
            <img class="media-object" src="<%= robot.avatar %>"> 
          </a>
        </div>
        <div class="col-md-8">
          <a href="/robots/<%= robot.id %>">
            <div class="media-body">
              <h4 class="media-heading"><%= robot.name %></h4>
            </div>
          </a>
          <a class="btn btn-success btn-xs" href="/robots/<%= robot.id %>/edit" role="button">Edit</a>
          <form action="/robots/<%= robot.id %>" method="POST">
            <input type="hidden" class="form-control" name="_method" value="DELETE">
            <input class="btn btn-xs btn-danger" type="submit" value="Delete">
          </form>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<p><div class="row">
  <a class="btn btn-success btn-xs" href="/robots/new" role="button">Create new robot</a>
</div></p>
<p><div class="row">
  <a class="btn btn-xs btn-info" href="/" role="button">Back to dashboard</a>
</div></p>
